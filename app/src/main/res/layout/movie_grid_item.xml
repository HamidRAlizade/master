<FrameLayout android:id="@+id/movie_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_height="250dp"
    android:layout_gravity="center"
    android:layout_marginRight="8dp"
    android:clickable="true"
    android:layout_margin="1dp"
    android:foreground="?attr/selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardCornerRadius="8dip"
        app:cardElevation="8dp">
    <com.joooonho.SelectableRoundedImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/movie_poster"
        android:scaleType="centerCrop"
        app:sriv_left_top_corner_radius="8dip"
        app:sriv_right_top_corner_radius="8dip"
        app:sriv_left_bottom_corner_radius="8dip"
        app:sriv_right_bottom_corner_radius="8dip"
        android:layout_height="200dp"
        android:layout_width="150dp" />
    </android.support.v7.widget.CardView>
    <View
        android:id="@+id/title_background"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="bottom"
        android:alpha="0.8"
        android:visibility="gone"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"/>

        <TextView
            android:id="@+id/movie_name"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:fontFamily="@font/acme"

            android:text="HAmdi"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/movie_name_de"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/acme"
            android:text="HAmdi"
            android:textColor="@android:color/darker_gray"
            android:textSize="15sp" />
    </LinearLayout>
</FrameLayout>
